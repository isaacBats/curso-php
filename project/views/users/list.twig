{% extends "layout.twig" %}
{% block title %} Users {% endblock %}
{% block content %}
  <section>
    <h1>Users</h1>
    <div class="alert alert-primary" role="alert">
        {{ responseMessage }}
    </div>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {% for user in allUsers %}
            <tr>
              <th>{{ user.name }}</th>
              <th>{{ user.email }}</th>
              <th>
                <ul><li><a href="/admin/user/{{ user.id }}">Edit</a></li></ul>
              </th>
            </tr>
        {% endfor %}
      </tbody>
    </table>
  </section>
{% endblock %}

